{
    "type": "ScrollView",
    "layout_width": "match_parent",
    "layout_height": "match_parent",
    "children": [{
        "type": "LinearLayout",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "orientation": "vertical",
        "padding": "16dp",
        "children": [{
            "type": "LinearLayout",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "orientation": "horizontal",
            "gravity": "center",
            "layout_marginTop": "36dp",
            "children": [{
                "type": "TextView",
                "layout_width": "0dp",
                "layout_weight": "0.2",
                "layout_height": "wrap_content",
                "textSize": "22sp",
                "textColor": "#000759",
                "lineSpacingExtra": "9sp",
                "layout_marginLeft": "8dp",
                "fontFamily": "fonts/rubik_regular.ttf",
                "text": "Search IFSC"
            }, {
                "type": "TextView",
                "layout_width": "0dp",
                "layout_weight": "0.1",
                "layout_height": "wrap_content",
                "textSize": "16sp",
                "textColor": "#4d6cd9",
                "lineSpacingExtra": "9sp",
                "layout_marginRight": "8dp",
                "paddingStart": "8dp",
                "paddingEnd": "8dp",
                "paddingTop": "4dp",
                "paddingBottom": "4dp",
                "textAllCaps": "true",
                "gravity": "center",
                "fontFamily": "fonts/rubik_medium.ttf",
                "background": {
                    "type": "shape",
                    "shape": "rectangle",
                    "children": [{
                        "type": "solid",
                        "color": "#264d6cd9"
                    }, {
                        "type": "corners",
                        "radius": "16dp"
                    }]
                },
                "text": "Close"
            }]
        }, {
            "type": "TextView",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "textSize": "12sp",
            "textColor": "#99a1c5",
            "lineSpacingExtra": "9sp",
            "layout_marginLeft": "8dp",
            "layout_marginRight": "8dp",
            "layout_marginTop": "8dp",
            "fontFamily": "fonts/rubik_medium.ttf",
            "textAllCaps": "true",
            "text": "Select Bank"
        }, {
            "type": "AppCompatSpinner",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "background": "@drawable/spinner_bg",
            "layout_marginLeft": "8dp",
            "layout_marginRight": "8dp",
            "id":"spinnerBankSelection",
            "layout_marginTop": "5dp",
            "data": {
                "items": "@{resultList}"
            },
            "adapter": {
                "@": {
                    "type": "SimpleSpinnerAdapter",
                    "item-count": "@{items.$length}",
                    "item-layout": {
                        "type": "LinearLayout",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "data": {
                            "item": "@{items[$index]}"
                        },
                        "children": [{
                            "type": "TextView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "fontFamily": "fonts/rubik_medium.ttf",
                            "lineSpacingExtra": "2.3sp",
                            "padding": "16dp",
                            "text": "@{item.bankName}",
                            "textColor": "@color/colorSelectedDark",
                            "textSize": "16sp"
                        }]
                    }
                }
            },
            "onSpinnerItemSelected": "updateStateList"
        }, {
            "type": "TextView",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "textSize": "12sp",
            "textColor": "#99a1c5",
            "lineSpacingExtra": "9sp",
            "layout_marginLeft": "8dp",
            "layout_marginRight": "8dp",
            "layout_marginTop": "48dp",
            "fontFamily": "fonts/rubik_medium.ttf",
            "textAllCaps": "true",
            "text": "SELECT STATE"
        }, {
            "type": "AppCompatSpinner",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "background": "@drawable/spinner_bg",
            "layout_marginLeft": "8dp",
            "layout_marginRight": "8dp",
            "layout_marginTop": "5dp",
            "id":"spinnerStateSelection",
            "data": {
                "items": "@{state}"
            },
            "adapter": {
                "@": {
                    "type": "SimpleSpinnerAdapter",
                    "item-count": "@{items.$length}",
                    "item-layout": {
                        "type": "LinearLayout",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "data": {
                            "item": "@{items[$index]}"
                        },
                        "children": [{
                            "type": "TextView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "fontFamily": "fonts/rubik_medium.ttf",
                            "lineSpacingExtra": "2.3sp",
                            "padding": "16dp",
                            "text": "@{item}",
                            "textColor": "@color/colorSelectedDark",
                            "textSize": "16sp"
                        }]
                    }
                }
            },
            "onSpinnerItemSelected": "updateDistrictList"
        }, {
            "type": "TextView",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "textSize": "12sp",
            "textColor": "#99a1c5",
            "lineSpacingExtra": "9sp",
            "layout_marginLeft": "8dp",
            "layout_marginRight": "8dp",
            "layout_marginTop": "48dp",
            "fontFamily": "fonts/rubik_medium.ttf",
            "textAllCaps": "true",
            "text": "Select Bank"
        }, {
            "type": "AppCompatSpinner",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "background": "@drawable/spinner_bg",
            "layout_marginLeft": "8dp",
            "layout_marginRight": "8dp",
            "layout_marginTop": "5dp",
            "id":"spinnerDistrictSelection",
            "data": {
                "items": "@{city}"
            },
            "adapter": {
                "@": {
                    "type": "SimpleSpinnerAdapter",
                    "item-count": "@{items.$length}",
                    "item-layout": {
                        "type": "LinearLayout",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "data": {
                            "item": "@{items[$index]}"
                        },
                        "children": [{
                            "type": "TextView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "fontFamily": "fonts/rubik_medium.ttf",
                            "lineSpacingExtra": "2.3sp",
                            "padding": "16dp",
                            "text": "@{item}",
                            "textColor": "@color/colorSelectedDark",
                            "textSize": "16sp"
                        }]
                    }
                }
            },
            "onSpinnerItemSelected": "updateBranchList"
        }, {
            "type": "TextView",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "textSize": "12sp",
            "textColor": "#99a1c5",
            "lineSpacingExtra": "9sp",
            "layout_marginLeft": "8dp",
            "layout_marginRight": "8dp",
            "layout_marginTop": "48dp",
            "fontFamily": "fonts/rubik_medium.ttf",
            "textAllCaps": "true",
            "text": "Select Bank"
        }, {
            "type": "AppCompatSpinner",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "background": "@drawable/spinner_bg",
            "id": "listViewState",
            "layout_marginLeft": "8dp",
            "layout_marginRight": "8dp",
            "layout_marginTop": "5dp",
            "id":"spinnerBranchSelection",
            "data": {
                "items": "@{branch}"
            },
            "adapter": {
                "@": {
                    "type": "SimpleSpinnerAdapter",
                    "item-count": "@{items.$length}",
                    "item-layout": {
                        "type": "LinearLayout",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "data": {
                            "item": "@{items[$index]}"
                        },
                        "children": [{
                            "type": "TextView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "fontFamily": "fonts/rubik_medium.ttf",
                            "lineSpacingExtra": "2.3sp",
                            "padding": "16dp",
                            "text": "@{item}",
                            "textColor": "@color/colorSelectedDark",
                            "textSize": "16sp"
                        }]
                    }
                }
            },
            "onSpinnerItemSelected": "getIfscCode"
        }, {
            "type": "TextView",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "textSize": "12sp",
            "textColor": "#99a1c5",
            "lineSpacingExtra": "9sp",
            "layout_marginTop": "48dp",
            "layout_gravity": "center_horizontal",
            "fontFamily": "fonts/rubik_regular.ttf",
            "textAllCaps": "true",
            "text": "Your bank IFSC code is:"
        }, {
            "type": "TextView",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "textSize": "26sp",
            "textColor": "#2d3566",
            "lineSpacingExtra": "9sp",
            "layout_marginTop": "8dp",
            "layout_gravity": "center_horizontal",
            "fontFamily": "fonts/rubik_medium.ttf",
            "textAllCaps": "true",
            "text": "@{ifscCode[0]}"
        }, {
            "type": "TextView",
            "id": "buttonProceed",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "layout_gravity": "center_horizontal",
            "layout_marginTop": "24dp",
            "background": "@drawable/drawable_button",
            "clickable": "true",
            "focusable": "true",
            "fontFamily": "fonts/rubik_medium.ttf",
            "paddingStart": "64dp",
            "paddingTop": "16dp",
            "paddingEnd": "64dp",
            "paddingBottom": "16dp",
            "onClick": "nextScreen::REPAYMENT SETUP",
            "text": "COPY & Proceed",
            "textColor": "@color/colorSelected",
            "textAllCaps": "true"
        }]
    }]
}