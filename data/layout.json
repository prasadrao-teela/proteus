{
    "type": "LinearLayout",
    "layout_width": "match_parent",
    "layout_height": "wrap_content",
    "orientation": "vertical",
    "children": [{
        "type": "TextView",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "fontFamily": "fonts/rubik_medium.ttf",
        "lineSpacingExtra": "3.3sp",
        "text": "Attempt 1/3",
        "textColor": "#2d3566",
        "textSize": "22sp"
    }, {
        "type": "ImageView",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "src": "@drawable/bureau_questionnaire",
        "layout_marginTop": "32dp"
    }, {
        "type": "TextView",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "fontFamily": "fonts/rubik_regular.ttf",
        "lineSpacingExtra": "6.7sp",
        "text": "Please provide disbursed amount of your loan account?",
        "textColor": "#5e6aa0",
        "textSize": "16sp",
        "layout_marginTop": "24dp"
    }, {
        "type": "RecyclerView",
        "layout_width": "match_parent",
        "layout_height": "match_parent",
        "layout_marginTop": "12dp",
        "id": "listViewIncomeSelection",
        "itemMargin": "5dp",
        "paddingLeft": "24dp",
        "validationRequired": true,
        "data": {
            "items": "@{tenures}"
        },
        "layout_manager": {
            "type": "GridLayoutManager",
            "spanCount": 1,
            "orientation": 0,
            "reverse": false
        },
        "adapter": {
            "@": {
                "type": "SingleSelectionListAdapter",
                "item-count": "@{items.$length}",
                "item-layout": {
                    "type": "LinearLayout",
                    "layout_width": "wrap_content",
                    "layout_height": "wrap_content",
                    "paddingTop": "52dp",
                    "paddingLeft": "28dp",
                    "paddingRight": "28dp",
                    "paddingBottom": "8dp",
                    "data": {
                        "item": "@{items[$index]}"
                    },
                    "background": "@drawable/bg_income_source",
                    "gravity": "bottom|center_horizontal",
                    "orientation": "vertical",
                    "children": [{
                        "type": "TextView",
                        "layout_width": "wrap_content",
                        "layout_height": "wrap_content",
                        "id": "labelIncomeSource",
                        "fontFamily": "fonts/rubik_medium.ttf",
                        "gravity": "bottom|center_horizontal",
                        "lineSpacingExtra": "2.3sp",
                        "text": "@{item.label}",
                        "textColor": "@color/color_income_source",
                        "textSize": "16sp"
                    }]
                }
            }
        }
    }, {
        "type": "TextView",
        "id": "buttonProceed",
        "layout_width": "wrap_content",
        "layout_height": "wrap_content",
        "layout_gravity": "center_horizontal",
        "layout_marginTop": "32dp",
        "background": "@drawable/drawable_button",
        "clickable": "true",
        "focusable": "true",
        "fontFamily": "fonts/rubik_medium.ttf",
        "paddingLeft": "64dp",
        "paddingTop": "16dp",
        "gravity": "center",
        "paddingRight": "64dp",
        "paddingBottom": "16dp",
        "onClick": "nextScreen::OFFER GENERATION",
        "text": "OKAY",
        "textColor": "@color/colorSelected"
    }]
}